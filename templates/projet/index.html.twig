{% extends 'base.html.twig' %}

{% block title %}Liste des employes{% endblock %}

{% block body %}

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Prenom</th>
      <th scope="col">Nom</th>
      <th scope="col">Telephone</th>
      <th scope="col">email</th>
      <th scope="col">adresse</th>
      <th scope="col">poste</th>
      <th scope="col">salaire</th>
      <th scope="col">date de naissance</th>
    </tr>
  </thead>
  <tbody>
{% for employe in employes %} 
    <tr>
      <td >{{ employe.id }}</th>
      <td>{{ employe.prenom }}</td>
      <td>{{ employe.nom }}</td>
      <td>{{ employe.telephone }}</td>
      <td>{{ employe.email }}</td>
      <td>{{ employe.adresse }}</td>
      <td>{{ employe.poste }}</td>
      <td>{{ employe.salaire }} €</td>
      <td>{{ employe.datenaissance }}</td>
      <td><a href="{{path('employe_edit', {id: employe.id})}}" class="btn btn-primary"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
  <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
  <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
</svg></a></td>
      <td><a onclick="return confirm('Voulez-vous supprimer cet employe ?')" href="{{path('employe_delete', {id: employe.id})}}" class="btn btn-danger"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
  <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
  <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
</svg></a></td>
    </tr>
{% endfor %}
  </tbody>
</table>


<div class="container-fluid">
  {{ form_start(form, {
      attr: {
          novalidate: 'novalidate',
      }
  }) }}
<div class="row">
  <div class="col-md-4">
    {{ form_row(form._prenom) }}
  </div>
  <div class="col-md-4">
    {{ form_row(form._nom) }}
  </div>
  <div class="col-md-4">
    {{ form_row(form._telephone) }}
  </div>
</div>
<div class="row">
  <div class="col-md-4">
    {{ form_row(form._email) }}
  </div>
  <div class="col-md-4">
    {{ form_row(form._adresse) }}
  </div>
  <div class="col-md-4">
    {{ form_row(form._poste) }}
  </div>
</div>
<div class="row">
  <div class="col-md-4">
    {{ form_row(form._salaire) }}
  </div>
  <div class="col-md-4">
    {{ form_row(form._datenaissance,{
        label: "Date de naissance",
        attr: {
            placeholder: 'dd/mm/yyyy',
        }
    }) }}
  </div>
  <div class="col-md-4">
    <button type="submit" class="btn btn-success mt-2">
    {% if editMode %}
        Enrigistrer les modifications
    {% else %}
        Ajouter l'employé
    {% endif %}
    </button>
  </div>
</div>
{{ form_end(form) }}
</div>

{% endblock %}
